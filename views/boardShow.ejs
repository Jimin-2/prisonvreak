<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--글꼴 Link-->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@300&display=swap" rel="stylesheet">

    <!--CSS-->
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/header.css">
    <link rel="stylesheet" type="text/css" href="/css/footer.css">

    <link rel="stylesheet" type="text/css" href="/css/boardShow.css">

    <!-- JavaScript -->
    <script src="javascript/index.js"></script>

    <!--Title-->
    <title> CAN </title>

</head>
<body>
<!-- header -->
<%- include('partials/header')%>
<!-- Section -->
<section id="section">
    <div id="layout">
        <div id="next-list-button">
            <button> 다음글 </button>
            <button onclick="location.href='/community'"> 목록 </button>
        </div>
        <div id="title">
            <h4> > 커뮤니티 </h4>
            <h1> <%= data.post_title %> </h1>
        </div>

        <div id="detail">
            <div class="profile"></div>
            <div>

                <p class="ninkname" name="mem_nickname">이름: <%= data.post_usernum %> </p>
                <p class="date">작성일: <%= new Date(data.post_created_at).toISOString().slice(0, 10) %> </p>
                <p class="date">조회수: <%= data.post_hit %></p>
                <p class="date">마지막 수정일시: <%= data.post_updated_at %></p>
            </div>
        </div>

        <hr>

        <div id="content">
            <p>
                <%= data.post_content %>
            </p>
            <p>
                <img src="<%= data.post_image %>">
            </p>
        </div>
        <hr>
        <h2> 댓글 </h2>
        <% comments.forEach(function(comments) { %>
        <div id="comment">
            <div class="comment-relative">
                <p class="ninkname"> 작성자: <%= comments.cmt_usernum %> </p>
            </div>
            <div> ㄴㄴ<%= comments.cmt_content %> </div> <br>
            <% }); %>
            <div id="comment-absolute"> 답글 </div>
        </div>

        <div id="comment-01">
            <div class="comment-relative">
                <p class="ninkname"> 정예은 </p>
                <p><a class=date> 2023/07/27 PM 03:14</a></p>
            </div>
            <div> 답글 내용입니다. </div>
        </div>

        <hr>
        <form action="/community/show" method="POST">

            <div id="comment-input">
                <p name="mem_nickname"> 정예은 </p>
                <textarea id="comment-input-Area" name="comment" placeholder="댓글을 입력하세요." oninput="calculateByteCount(this)"></textarea>
                <div class="submit">
                    <p id="byte-count">0 byte</p>
                </div>
                    <button class="button btnFade btnBlack" type="submit"> 등록 </button>
            </div>
        </form>
        <a href="/community">목록</a>
    </div>
    <script>

        function calculateByteCount(textarea) {
            const text = textarea.value;
            const byteCount = new TextEncoder('utf-8').encode(text).length;
            const byteCountText = `${byteCount} byte`;
            
            // 바이트 수 변화
            document.getElementById('byte-count').textContent = byteCountText;
        }
    </script>
</section>
<!-- footer -->
<%- include('partials/footer')%>
</body>
</html>